{
    "compilerOptions": {
        "noImplicitAny": true,
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "watch": false,
        "typeRoots": [
            "node_modules/@types"
        ],
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noUnusedLocals": true,
        "allowJs": false,
        "skipLibCheck": true,
        "strictNullChecks": true
    }
}